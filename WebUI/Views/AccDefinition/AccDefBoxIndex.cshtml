@using Inv.WebUI.Resources
@{
    ViewBag.Title = @SystemResource.Men_AccDefBox;
    Layout = "~/Views/Shared/Layout.cshtml";
}

<style>
    .inner tr td {
        border-top: none !important;
    }





    .style_pading {
        padding-left: 1px;
        padding-right: 1px;
    }

    .table_11 tr td:nth-child(3) {
        width: 200px;
    }

    .table_11 tr th:nth-child(12), .table_11 tr td:nth-child(12) {
        width: 120px;
    }

    .table_11 {
        margin-bottom: 0px;
    }

    .auto-style1 {
        background-color: #F5F5F5;
    }

    .display_none {
        display: none !important;
    }

    #btnAddDetails {
        font-size: 40px;
    }

        #btnAddDetails:hover {
            color: #24b414;
        }

    .glyphicon-remove-sign:hover {
        color: red
    }



    .font_codenumber {
        font-size: 15px;
        font-weight: bold;
        text-align:center
    }
</style>




<div class="panel panel-default">
    <div class="panel-heading panel_me">
        @*<i class="glyphicon glyphicon-pencil icon_panel"></i><label class="span_item"> @SystemResource.Men_AccDefBox</label><label class="span_item"></label>*@
    </div>

    <div class="panel-body" id="div_ContentData">
        <div class="row">
            <div class="col-lg-12">

                <div class="col-lg-9">
                </div>
                <div class="col-lg-3">

                    <button type="button" class="btn btn-warning float_left_right display_none" id="btnback">
                        <span class="glyphicon glyphicon-backward"></span> @SystemResource.App_back
                    </button>
                    <button type="button" class="btn btn-primary float_left_right" id="btnedite">
                        <span class="glyphicon glyphicon-edit"></span> @SystemResource.App_Update
                    </button>

                    <button id="btnsave" type="button" class="btn btn-success float_left_right display_none">
                        @SystemResource.App_save  <span class="glyphicon glyphicon-floppy-saved"></span>
                    </button>

                </div>

            </div>

        </div>

        <div id="font_codenumber" class="col-lg-12 font_codenumber">

            <div class="col-lg-1">
                <span class="">@SystemResource.p_itemA</span>
            </div>
            <div class="col-lg-1">
                <span class="">@SystemResource.App_Petty_Cash</span>
            </div>
            <div class="col-lg-3">
                <span class="">@SystemResource.p_account_number </span>
            </div>
            <div class="col-lg-2">
                <span class="">@SystemResource.App_account_numbe  </span>
            </div>
            <div class="col-lg-1">
                <span class="">@SystemResource.App_Active ؟ </span>
            </div>
            <div class="col-lg-2">
                <span class="">@SystemResource.App_openBalance</span>
            </div> 
            <div class="col-lg-2">
                <span class="">تاريخ الرصيد</span>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="col-lg-12 " id="div_Data">
            </div>
            <span id="btnAddDetails" class="glyphicon glyphicon-plus-sign  display_none"></span>

        </div>
    </div>


</div>

 
<script src="~/ClientApp/AccDefinition/AccDefBox.js"></script>
